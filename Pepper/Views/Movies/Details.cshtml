@model Pepper.Models.Movie

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<div>
    <table class="table table-hover">
        <tbody>
            <tr>
                <th scope="row">@Html.DisplayNameFor(model => model.Genre)</th>
                <td>@Model.Genre.Name</td>
            </tr>
            <tr>
                <th scope="row">@Html.DisplayNameFor(model => model.ReleaseDate)</th>
                <td>@Model.ReleaseDate</td>

            </tr>
            <tr>
                <th scope="row">@Html.DisplayNameFor(model => model.NumberInStock)</th>
                <td>@Model.NumberInStock</td>
            </tr>

        </tbody>
    </table>
</div>

